<?xml version="1.0" encoding="UTF-8"?>

<web-app
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        version="2.5">

    <servlet>
        <servlet-name>BankServlet</servlet-name>
        <servlet-class>com.revature.servlet.BankServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BankServlet</servlet-name>
        <url-pattern>/bank</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.revature.services.DependencyLoaderListener</listener-class>
    </listener>

</web-app>